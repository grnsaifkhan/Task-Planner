<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    android:background="#ffae62"
    tools:context=".DetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Task"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#970606"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/text_userTaskDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arshi Faiza:"
                android:textColor="#a40303"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text_userOneTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Task Details"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/text_userOneRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Remark1"
                android:textColor="#e10307"
                android:textStyle="italic"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-------------------------------"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shafe Ahanaf: "
                android:textColor="#a40303"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/text_userTwoTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Task Details"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_userTwoRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Remark2"
                android:textColor="#e10307"
                android:textStyle="italic"
                android:textSize="20sp"/>
        </LinearLayout>

</ScrollView>